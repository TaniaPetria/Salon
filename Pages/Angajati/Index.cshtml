@page
@model Salon.Pages.Angajati.IndexModel

@{
    ViewData["Title"] = "Index";
}

<h1>Index</h1>

<p>
    <a asp-page="Create">Create New</a>
</p>
<table class="table">
    <thead>
        <tr>
            <th>
                @Html.DisplayNameFor(model => model.Angajat[0].Nume)
            </th>
            <th>
                @Html.DisplayNameFor(model => model.Angajat[0].Avatar)
            </th>
            <th>
                @Html.DisplayNameFor(model => model.Angajat[0].AngajatiServicii)
            </th>
            <th></th>
        </tr>
    </thead>
    <tbody>
@foreach (var item in Model.AngajatD.Angajati) {
        string selectedRow = ""; 
        if (item.ID == Model.AngajatID) { selectedRow = "table-success"; }
        <tr class="@selectedRow">
            <td>
                @Html.DisplayFor(modelItem => item.Nume)
            </td>
            <td>
                @Html.DisplayFor(modelItem => item.Avatar)
            </td>
            <td> 
                @{ foreach (var serviciu in item.AngajatiServicii) 
                    { 
                        @serviciu.Serviciu.Denumire <br/> 
                    }
                 } 
            </td>
            <td>
                <a asp-page="./Edit" asp-route-id="@item.ID">Edit</a> |
                <a asp-page="./Details" asp-route-id="@item.ID">Details</a> |
                <a asp-page="./Delete" asp-route-id="@item.ID">Delete</a>
            </td>
        </tr>
}
    </tbody>
</table>
